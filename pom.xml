<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <url>https://github.com/jeap-admin-ch/jeap-archrepo-service/tree/main</url>
    <scm>
        <url>https://github.com/jeap-admin-ch/jeap-archrepo-service.git</url>
        <connection>scm:git:git://github.com/jeap-admin-ch/jeap-archrepo-service.git</connection>
        <developerConnection>scm:git:ssh://github.com:jeap-admin-ch/jeap-archrepo-service.git</developerConnection>
    </scm>
    <developers>
        <developer>
            <name>BIT</name>
            <email>jeap-community@bit.admin.ch</email>
            <organization>Federal Office of Information Technology, Systems and Telecommunication FOITT</organization>
            <organizationUrl>https://www.bit.admin.ch/</organizationUrl>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>

    <parent>
        <groupId>ch.admin.bit.jeap</groupId>
        <artifactId>jeap-spring-boot-parent</artifactId>
        <version>27.1.1</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <artifactId>jeap-archrepo-service</artifactId>
    <name>${project.groupId}:${project.artifactId}</name>
    <version>2.5.2-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <maven.javadoc.skip>false</maven.javadoc.skip>
        <org.eclipse.jgit.version>7.3.0.202506031305-r</org.eclipse.jgit.version>
        <asciidoc-confluence-publisher-client.version>0.12.0</asciidoc-confluence-publisher-client.version>
        <wiremock-standalone.version>3.13.1</wiremock-standalone.version>
        <commons-io.version>2.19.0</commons-io.version>
        <guava.version>33.4.8-jre</guava.version>
    </properties>

    <modules>
        <module>jeap-archrepo-metamodel</module>
        <module>jeap-archrepo-importers</module>
        <module>jeap-archrepo-importer-deploymentlog</module>
        <module>jeap-archrepo-importer-messagetype</module>
        <module>jeap-archrepo-importer-pactbroker</module>
        <module>jeap-archrepo-importer-prometheus</module>
        <module>jeap-archrepo-persistence</module>
        <module>jeap-archrepo-docgen</module>
        <module>jeap-archrepo-web</module>
        <module>jeap-archrepo-importer-prometheus-aws</module>
        <module>jeap-archrepo-importer-prometheus-cf</module>
        <module>jeap-archrepo-importer-prometheus-rhos</module>
        <module>jeap-archrepo-importer-openapi</module>
        <module>jeap-archrepo-importer-reaction-observer</module>
        <module>jeap-archrepo-test</module>
        <module>jeap-archrepo-instance</module>
        <module>jeap-archrepo-dbschema-model</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-metamodel</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-persistence</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importers</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-messagetype</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-pactbroker</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-prometheus</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-prometheus-aws</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-prometheus-cf</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-prometheus-rhos</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-deploymentlog</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-openapi</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-importer-reaction-observer</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-docgen</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-web</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-test</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ch.admin.bit.jeap</groupId>
                <artifactId>jeap-archrepo-dbschema-model</artifactId>
                <version>2.5.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.jgit</groupId>
                <artifactId>org.eclipse.jgit</artifactId>
                <version>${org.eclipse.jgit.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.jgit</groupId>
                <artifactId>org.eclipse.jgit.ssh.apache</artifactId>
                <version>${org.eclipse.jgit.version}</version>
            </dependency>
            <dependency>
                <groupId>org.sahli.asciidoc.confluence.publisher</groupId>
                <artifactId>asciidoc-confluence-publisher-client</artifactId>
                <version>${asciidoc-confluence-publisher-client.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wiremock</groupId>
                <artifactId>wiremock-standalone</artifactId>
                <version>${wiremock-standalone.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <!-- License compliance check -->
            <plugin>
                <groupId>org.honton.chas</groupId>
                <artifactId>license-maven-plugin</artifactId>
            </plugin>
            <!-- Generates THIRD-PARTY-LICENSES.md -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <!-- Add license to jar manifest -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <configuration>
                        <archive>
                            <manifestEntries>
                                <Bundle-License>https://www.apache.org/licenses/LICENSE-2.0</Bundle-License>
                            </manifestEntries>
                        </archive>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.sonarsource.scanner.maven</groupId>
                    <artifactId>sonar-maven-plugin</artifactId>
                    <version>5.1.0.4751</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
